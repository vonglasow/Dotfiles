[user]
    name = Alexis von Glasow
    email = vonglasow@gmail.com

[alias]
    amend = commit --amend
    st = status
    ci = commit
    co = checkout
    ba = branch -a
    b = branch
    f = fetch --all -p
    changes = diff --name-status
    dic = diff --cached
    diffstat = diff --stat
    oneline = log --pretty=oneline --abbrev-commit --graph
    who = shortlog -sne
    lc = !git oneline ORIG_HEAD.. --stat --no-merges
    addm = !git-ls-files -m -z | xargs -0 git-add && git status
    addu = !git-ls-files -o --exclude-standard -z | xargs -0 git-add && git status
    rmm = !git ls-files -d -z | xargs -0 git-rm && git status
    mate = !git-ls-files -m -z | xargs -0 vim
    mateall = !git-ls-files -m -o --exclude-standard -z | xargs -0 vim
    graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    graphx = !GIT_PAGER='less -FRSX' git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset' --abbrev-commit --date=relative --all
    lint  = !git st --porcelain | grep -e '^[AUM ][UM ].*\\.php$' | awk '{print $2}' | xargs -L 1 php -l
    list-alias = !git config --get-regexp alias
    lout = log --pretty=oneline --abbrev-commit --graph @{u}..
    out = !git fetch && git lout
    lin = log --pretty=oneline --abbrev-commit --graph ..@{u}
    in = !git fetch && git log --pretty=oneline --abbrev-commit --graph ..@{u}
    undo = reset --soft HEAD^
    serve = daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
    unstage = !git reset HEAD
    pullify = config --add remote.origin.fetch '+refs/pull/*/head:refs/remotes/origin/pr/*'
    info = remote -v
    unstash = stash pop
    fm = !git f && git co $2 && git pull && git co $1 && git pull && git merge $2
    clb = "!f() { git f && git co develop && for b in `git b | grep -v master | grep -v develop`; do git branch -D $b; done; }; f;"
    clab = "!f() { git clb && git branch -D master && git co master && git branch -D develop && git co develop; }; f;"
    clmb = !git co develop && git branch --merged | grep -v master | grep -v develop | xargs -rl git branch -D
    clamb = !git clmb && git branch -r --merged | grep origin | grep -v master | grep -v develop | sed -e 's_/_ :_g' | xargs -rl echo git push

[color]
    ui = true

[branch]
    autosetuprebase = always

[merge]
    tool = gvimdiff

[push]
	default = simple
